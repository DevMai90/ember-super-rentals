<article class="listing">
  <a
    onclick={{action "toggleImageSize"}}
    class="image {{if this.isWide "wide"}}"
    role="button"
  >
    <img src={{this.rental.image}} alt="Rental property">
    <small>View larger</small>
  </a>
  <div class="details">
    {{!-- Pass in nested route name, rental model object gets serialized as object.id (can pass in rental.id for clarity) --}}
    <h3>
      {{#link-to "rentals.show" rental.id class=rental.id}}
        {{this.rental.title}}
      {{/link-to}}
    </h3>
    <div class="detail owner">
      <span>Owner:</span> {{this.rental.owner}}
    </div>
    <div class="detail type">
      <span>Type:</span> {{rental-property-type this.rental.category}} - {{this.rental.category}}
    </div>
    <div class="detail location">
      <span>Location:</span> {{this.rental.city}}
    </div>
    <div class="detail bedrooms">
      <span>Number of bedrooms:</span> {{this.rental.bedrooms}}
    </div>
  </div>
  {{location-map location=this.rental.city}}
</article>